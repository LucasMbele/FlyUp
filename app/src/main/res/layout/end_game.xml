<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sea_cloud"
    >

    <TextView
        android:id="@+id/restart_text"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="Restart?"
        android:fontFamily="@font/nova_slim"
        android:textColor="#00000f"
        android:textSize="25sp"></TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restart_text"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/restart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/nova_slim"
            android:text="Yes"
            android:textColor="#00000f">

        </Button>

        <Button
            android:id="@+id/exit_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/restart_btn"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/nova_slim"
            android:text="No"
            android:textColor="#00000f"></Button>
    </RelativeLayout>

    <TextView
        android:id="@+id/result_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="#00000f"
        android:fontFamily="@font/nova_slim"></TextView>


</RelativeLayout>